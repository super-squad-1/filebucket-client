<div id="upload-modal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-md">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Upload a File</h4>
      </div>
      <div class="modal-body">
        <form id="multipart-form-data" enctype="multipart/form-data" class="form">
          <fieldset>
            <div class="form-group">
              <label for="file-upload-title" class="sr-only">Title</label>
              <div class="input-group">
                <input id="file-upload-title" class="form-control" type="text" placeholder="Choose a file..." name="file[name]">
                <div class="input-group-btn">
                  <label class="file-upload btn btn-primary">
                    <span><i class="glyphicon glyphicon-file"></i> Choose File</span>
                    <input id="file-selector" type="file" class="upload" name="file[path]"/>
                  </label>
                </div>
              </div>
              <p class="help-block">Make sure to name your file</p>
            </div>
            <div class="form-group text-center">
              <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
              <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-cloud-upload"></span> Upload</button>
            </div>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>
